<UserControl x:Class="View.EndGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             Height="300" Width="300">
    <UserControl.Background>
        <ImageBrush ImageSource="Images\246x0w.jpg"/>
    </UserControl.Background>
    <DockPanel HorizontalAlignment="Center">
        <StackPanel>
            <WrapPanel Margin="90,15,0,0">
                <TextBlock Text="Winner:   "/>
                <Label Content="{Binding Result}" Width="50"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Command="{Binding newGameCommand}" Margin="200,160,0,0" Content="Restart"/>
            </WrapPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
