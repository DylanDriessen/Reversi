<UserControl x:Class="View.EndGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             Height="300" Width="450">
    <UserControl.Background>
        <ImageBrush ImageSource="Images\Winnaar.jpg"/>
    </UserControl.Background>
    <DockPanel HorizontalAlignment="Center">
        <StackPanel>
            <WrapPanel Margin="0,50,0,0">
                <TextBlock Text="Winner: "/>
                <TextBlock Text="{Binding endResult}"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,180,0,0">
                <Button Command="{Binding newGameCommand}" Content="Restart"/>
            </WrapPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
